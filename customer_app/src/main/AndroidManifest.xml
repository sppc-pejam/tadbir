<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sppcco.customer_app">

    <application
        android:name="com.sppcco.customer_app.framework.application.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.sppcco.customer.ui.create.add.AddCustomerActivity"/>
        <activity android:name="com.sppcco.customer.ui.create.load.LoadCustomerActivity"/>
        <activity android:name="com.sppcco.customer.ui.select.SelectCustomerActivity"/>
        <activity android:name="com.sppcco.merchandise.ui.select.SelectMerchandiseActivity"/>

    </application>

</manifest>