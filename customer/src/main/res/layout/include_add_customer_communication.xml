<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/cl_communication"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:layoutDirection="ltr">

  <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/et_phone"
    style="@style/UTextAppearance.Headline2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:backgroundTint="@color/secondary"
    android:enabled="true"
    android:gravity="center"
    android:hint="@string/cpt_phone"
    android:inputType="phone"
    android:maxLength="64"
    android:maxLines="1"
    android:singleLine="true"
    android:textColor="@color/primary_text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:targetApi="lollipop"/>


  <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/et_fax"
    style="@style/UTextAppearance.Headline2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:backgroundTint="@color/secondary"
    android:enabled="true"
    android:gravity="center"
    android:hint="@string/cpt_fax"
    android:inputType="phone"
    android:maxLength="64"
    android:maxLines="1"
    android:singleLine="true"
    android:textColor="@color/primary_text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_phone"
    tools:targetApi="lollipop"/>


  <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/et_mobile"
    style="@style/UTextAppearance.Headline2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:backgroundTint="@color/secondary"
    android:enabled="true"
    android:gravity="center"
    android:hint="@string/cpt_mobile"
    android:inputType="phone"
    android:maxLength="64"
    android:maxLines="1"
    android:singleLine="true"
    android:textColor="@color/primary_text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_fax"
    tools:targetApi="lollipop"/>


  <androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/et_email"
    style="@style/UTextAppearance.Headline2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:backgroundTint="@color/secondary"
    android:enabled="true"
    android:gravity="center"
    android:hint="@string/cpt_email"
    android:inputType="textWebEmailAddress"
    android:maxLength="255"
    android:maxLines="1"
    android:singleLine="true"
    android:textColor="@color/primary_text"
    app:layout_constraintBottom_toTopOf="@+id/btn_continue_communication"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_mobile"
    tools:targetApi="lollipop"/>


  <androidx.appcompat.widget.AppCompatButton
    android:id="@+id/btn_continue_communication"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="8dp"
    android:singleLine="true"
    android:text="@string/cpt_continue"
    android:theme="@style/Button.Primary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>